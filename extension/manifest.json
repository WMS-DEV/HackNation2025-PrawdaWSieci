{
    "manifest_version": 3,
    "name": "SSL Test Extension",
    "version": "1.0",
    "description": "A simple browser extension",
    "permissions": ["webRequest", "tabs", "activeTab", "scripting"],
    "host_permissions": ["<all_urls>"],
    "background": {
        "service_worker": "background.js",
        "type": "module"
    },
    "icons": {
        "16": "icons/icon16.png",
        "32": "icons/icon32.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "web_accessible_resources": [
        {
            "resources": [ "qrcode.svg" ],
            "matches": [ "*://*.gov.pl/*" ]
        },
        {
            "resources": [ "emblem.svg" ],
            "matches": [ "<all_urls>" ]
        }
    ],
    "content_scripts": [
        {
            "matches": ["*://*.gov.pl/*"],
            "js": ["qrcode.min.js", "gov-content.js"],
            "css": ["gov-styles.css"]
        },
        {
            "matches": ["<all_urls>"],
            "js": ["warning-content.js"],
            "css": ["warning-styles.css"]
        }
    ]
}
